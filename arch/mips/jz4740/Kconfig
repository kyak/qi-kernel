choice
    prompt "Machine type"
    depends on MACH_JZ
    default JZ4740_QI_LB60

endchoice

config HAVE_PWM
	bool

config SOC_JZ4740
	bool
	select JZSOC
	select GENERIC_GPIO
	select ARCH_REQUIRE_GPIOLIB
	select SYS_HAS_EARLY_PRINTK
	select SYS_SUPPORTS_LITTLE_ENDIAN
	select IRQ_CPU
	select DMA_NONCOHERENT
	select HAVE_PWM

config JZSOC
	bool
	select JZRISC
	select SYS_HAS_CPU_MIPS32_R1
	select SYS_SUPPORTS_32BIT_KERNEL

config JZRISC
	bool
